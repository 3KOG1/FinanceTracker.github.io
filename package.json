{
    "name": "finance-tracker",
    "version": "1.0.0",
    "description": "Offline personal finance tracking application",
    "scripts": {
        "build:css": "tailwindcss -i ./src/input.css -o ./src/output.css --minify",
        "watch:css": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
        "build:js": "babel App.jsx components/*.jsx --out-dir dist --presets=@babel/preset-react",
        "watch:js": "babel App.jsx components/*.jsx --out-dir dist --presets=@babel/preset-react --watch"
    },
    "dependencies": {
        "tailwindcss": "^3.4.13"
    },
    "devDependencies": {
        "@babel/cli": "^7.25.6",
        "@babel/preset-react": "^7.24.7"
    }
}